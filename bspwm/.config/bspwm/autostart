#!/usr/bin/env bash

# Wallpaper
feh --bg-scale ~/.wallpapers/evening-sky.png &

# Kill Applications
pkill -f kdeconnectd
pkill -f polybar
pkill kdeconnect-indicator
pkill -f WhatsDesk
pkill conky
pkill emacs
pkill spotify

# Polybar
~/.config/polybar/launch.sh &

# Applications
whatsdesk &
clipmenud &                      #Clipmenu Daemon
/usr/lib/kdeconnectd &           #KDE Connect 
emacs --daemon &                 #Emacs Daemon

# Keyboard Layout
setxkbmap -layout us,'us(dvorak)' -option grp:toggle &

# Conky
pgrep conky || conky &

# MPD
~/.scripts/mpd_start &
